@model BrandHandlerWebApp.Models.Meeting
@{
    ViewData["Title"] = "Meeting Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Meeting Details</h4>
                    <div>
                        <a asp-action="ReviewMeetings" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Back to Meetings
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="border-bottom pb-2">Meeting Information</h5>
                            <div class="row mt-3">
                                <div class="col-md-4 fw-bold">Title:</div>
                                <div class="col-md-8">@Model.Title</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-4 fw-bold">Description:</div>
                                <div class="col-md-8">@Model.Description</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-4 fw-bold">Status:</div>
                                <div class="col-md-8">
                                    @switch (Model.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-4 fw-bold">Requested Date:</div>
                                <div class="col-md-8">@Model.RequestedDateTime.ToString("dddd, MMMM dd, yyyy h:mm tt")</div>
                            </div>
                            @if (Model.Status == "Approved" && Model.ConfirmedDateTime.HasValue)
                            {
                                <div class="row mt-2">
                                    <div class="col-md-4 fw-bold">Confirmed Date:</div>
                                    <div class="col-md-8">@Model.ConfirmedDateTime.Value.ToString("dddd, MMMM dd, yyyy h:mm tt")</div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-4 fw-bold">Meeting Link:</div>
                                    <div class="col-md-8">
                                        @if (!string.IsNullOrEmpty(Model.MeetingLink))
                                        {
                                            <a href="@Model.MeetingLink" target="_blank" class="btn btn-sm btn-success">
                                                <i class="bi bi-camera-video"></i> Join Meeting
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not available</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="border-bottom pb-2">Brand Information</h5>
                            <div class="row mt-3">
                                <div class="col-md-4 fw-bold">Name:</div>
                                <div class="col-md-8">@Model.BrandUser?.FullName</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-4 fw-bold">Email:</div>
                                <div class="col-md-8">@Model.BrandUser?.Email</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="border-bottom pb-2">Timeline</h5>
                            <div class="row mt-3">
                                <div class="col-md-4 fw-bold">Created On:</div>
                                <div class="col-md-8">@Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</div>
                            </div>
                            @if (Model.UpdatedAt != Model.CreatedAt)
                            {
                                <div class="row mt-2">
                                    <div class="col-md-4 fw-bold">Last Updated:</div>
                                    <div class="col-md-8">@Model.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (Model.Status == "Pending")
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="border-bottom pb-2">Actions</h5>
                                <div class="d-flex mt-3">
                                    <button type="button" class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#approveModal">
                                        <i class="bi bi-check-circle"></i> Approve Meeting
                                    </button>
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                        <i class="bi bi-x-circle"></i> Reject Meeting
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Meeting Modal -->
@if (Model.Status == "Pending")
{
    <div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="ApproveMeeting" asp-route-id="@Model.Id" method="post">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="approveModalLabel">Approve Meeting Request</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="confirmedDateTime" class="form-label">Confirmed Date & Time</label>
                            <input type="datetime-local" class="form-control" id="confirmedDateTime" name="ConfirmedDateTime" required>
                        </div>
                        <div class="mb-3">
                            <label for="meetingLink" class="form-label">Meeting Link (Zoom/Meet)</label>
                            <input type="url" class="form-control" id="meetingLink" name="MeetingLink" placeholder="https://zoom.us/j/..." required>
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" id="notes" name="Notes" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Approve & Send Confirmation</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Reject Meeting Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="RejectMeeting" asp-route-id="@Model.Id" method="post">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Meeting Request</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="rejectionReason" class="form-label">Reason for Rejection</label>
                            <textarea class="form-control" id="rejectionReason" name="RejectionReason" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}