@model BrandHandlerWebApp.Models.Meeting

@{
    ViewData["Title"] = "Delete Meeting";
}

<h1 class="text-danger">Delete Meeting</h1>

<h3>Are you sure you want to delete this meeting?</h3>
<div>
    <h4>Meeting Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestedDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestedDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="DeleteMeetingConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ReviewMeetings" class="btn btn-secondary ms-2">Back to List</a>
    </form>

</div>
