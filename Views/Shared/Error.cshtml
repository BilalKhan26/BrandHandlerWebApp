@using BrandHandlerWebApp.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Oops! Something went wrong</h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-emoji-frown text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <div class="alert alert-danger">
                        <p class="mb-0">We apologize for the inconvenience. An error occurred while processing your request.</p>
                    </div>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="mb-3 text-muted">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <h4>What can you do?</h4>
                        <ul>
                            <li>Return to the <a asp-controller="Home" asp-action="Index" class="text-primary">homepage</a></li>
                            <li>Try refreshing the page</li>
                            <li>Try again later</li>
                            <li>Contact our <a asp-controller="Home" asp-action="Contact" class="text-primary">support team</a> if the problem persists</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-house-door me-1"></i> Back to Home
                        </a>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope me-1"></i> Contact Support
                        </a>
                    </div>
                </div>
            </div>
            
            @if (System.Diagnostics.Debugger.IsAttached || Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="h5 mb-0"><i class="bi bi-gear-fill me-2"></i>Development Mode</h3>
                    </div>
                    <div class="card-body">
                        <p>
                            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                        </p>
                        <p class="mb-0">
                            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                            It can result in displaying sensitive information from exceptions to end users.
                            For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                            and restarting the app.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
