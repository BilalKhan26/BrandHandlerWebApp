@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0"><i class="bi bi-question-circle-fill me-2"></i>Page Not Found</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <span class="display-1 text-muted">404</span>
                    </div>
                    
                    <div class="mb-4">
                        <i class="bi bi-search text-primary" style="font-size: 5rem;"></i>
                    </div>
                    
                    <div class="mb-4">
                        <h2 class="h4">Oops! We couldn't find the page you're looking for.</h2>
                        <p class="text-muted">
                            The page you requested may have been moved, deleted, or might never have existed.
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h3 class="h5">Here are some helpful links:</h3>
                        <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                            <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary">
                                <i class="bi bi-info-circle me-1"></i> About
                            </a>
                            <a asp-controller="Home" asp-action="FAQ" class="btn btn-outline-primary">
                                <i class="bi bi-question-circle me-1"></i> FAQ
                            </a>
                            <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary">
                                <i class="bi bi-envelope me-1"></i> Contact
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <form asp-controller="Home" asp-action="Index" method="get" class="d-flex">
                                <input type="text" name="search" class="form-control me-2" placeholder="Search our site...">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>