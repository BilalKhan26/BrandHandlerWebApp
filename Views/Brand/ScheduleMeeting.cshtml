@model BrandHandlerWebApp.ViewModels.MeetingRequestViewModel
@{
    ViewData["Title"] = "Schedule Meeting";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Schedule a Meeting</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ScheduleMeeting" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Meeting Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a descriptive title for your meeting" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the purpose of this meeting and any specific topics you'd like to discuss"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequestedDateTime" class="form-label">Preferred Date and Time</label>
                            <input asp-for="RequestedDateTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="RequestedDateTime" class="text-danger"></span>
                            <small class="form-text text-muted">Please select your preferred date and time for the meeting. We'll try to accommodate your request.</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Meetings
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-calendar-plus"></i> Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}